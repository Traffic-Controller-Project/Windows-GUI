        "Master Current State":{
            "name": "master",
            "treeView":true,
            "read":true,
            "columns":["State Variable","Value"],
            "rows":[
                ["Top Level State", "Anticlockwise"],
                ["Lower State", "North Green"],
                ["Time Allotted (s)",16],
                ["Time Left(s)",10]
            ],
            "icons":false
        },
        "SlavesCurrentState":{
            "name": "slave",
            "treeView":true,
            "read":true,
            "columns":["Slave","Current Signal","Time allotted (s)","Time elapsed (s)","Status"],
